@model IEnumerable<StepItUp.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-id="@item.CartId">Delete</a>
            </td>
        </tr>
}
    <tr>
        <td colspan="2" class="text-right">Total Amount:</td>
        <td style="text-align: right">@ViewBag.TotalAmount</td>
        <td colspan="3"></td>
    </tr>
    </tbody>
</table>

<div class="col-12 mb-auto text-info">
    <a class="btn btn-info" asp-action="Index">Continue Shopping</a>
    <a class="btn btn-success" asp-action="Checkout">Go to Checkout >></a>
</div>
